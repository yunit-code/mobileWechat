{
    "classId": "idm.componet.mobileWechat.shortcut",
    "comName": "快捷方式",
    "className": "IShortCut",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "group",
                    "text": "外层卡片设置",
                    "desc": "提供设置标题、图标样式等属性",
                    "children": [
                        {
                            "type": "switch",
                            "layoutType": "inline",
                            "text": "显示标题",
                            "desc":"是否显示标题",
                            "bindKey": "isShowTitle",
                            "default": "true"
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "标题",
                            "bindKey": "comTitle",
                            "default": "快捷方式",
                            "display": "@[isShowTitle]"
                        },
                        {
                            "type": "iconSelect",
                            "layoutType": "inline",
                            "text": "标题图标",
                            "bindKey": "titleIconClass",
                            "default": "",
                            "display": "@[isShowTitle]"
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "内层卡片设置",
                    "desc": "提供设置内容样式、数量等属性",
                    "children": [
                        {
                            "type": "select",
                            "layoutType": "inline",
                            "text": "快捷方式样式",
                            "bindKey": "shortCutStyle",
                            "desc": "设置点击轮播图片时链接跳转方式",
                            "dictionary": [
                                {
                                    "label": "样式一",
                                    "value": "default"
                                },
                                {
                                    "label": "样式二",
                                    "value": "default2"
                                },
                                {
                                    "label": "样式三",
                                    "value": "default3"
                                }
                            ],
                            "default": "default"
                        },
                        {
                            "type": "slider",
                            "layoutType": "inline",
                            "text": "每行展示",
                            "bindKey": "maxNumber",
                            "desc":"用于设置每行显示的数量，实际数量超过则会自动换行显示",
                            "default": 3,
                            "max":  10,
                            "min": 1
                        },
                        {
                            "type": "inputNumberUnit",
                            "layoutType": "inline",
                            "text": "每项高度",
                            "bindKey": "shortItemHeight",
                            "default": {"inputVal":72.5, "selectVal": "px"},
                            "dictionary": [
                                {
                                    "label": "px",
                                    "value": "px"
                                },
                                {
                                    "label": "%",
                                    "value": "%"
                                },
                                {
                                    "label": "em",
                                    "value": "em"
                                }
                            ],
                            "display": "@[shortCutStyle=='default']"
                        }
                    ]
                },
                {
                    "type": "table",
                    "layoutType": "inline",
                    "text": "快捷方式配置",
                    "bindKey": "shortConfigList",
                    "tabText": "快捷方式[index]",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "名称",
                            "bindKey": "name",
                            "desc":"",
                            "default":"省政府领导分工",
                            "placeholder":"请输入名称"
                        },
                        {
                            "type": "radio",
                            "layoutType": "inline",
                            "text": "跳转方式",
                            "desc":"用于设置是当页跳转还是弹出新窗口两种方式",
                            "bindKey": "jumpType",
                            "dictionary": [
                                {
                                    "label": "当前页",
                                    "value": "current"
                                },
                                {
                                    "label": "新窗口",
                                    "value": "new"
                                }
                            ],
                            "default": "current"
                        },
                        {
                            "type": "textarea",
                            "layoutType": "inline",
                            "text": "URL",
                            "bindKey": "shotUrl",
                            "desc":"",
                            "placeholder": "跳转链接"
                        },
                        {
                            "type": "uploadImage",
                            "layoutType": "inline",
                            "text": "背景图片",
                            "bindKey": "bgUrl",
                            "placeholder": "可输入图片地址或直接上传",
                            "dictionary":[
                                "/resource/idm/img/6.png",
                                "/resource/idm/img/12.png",
                                "/resource/idm/img/14.png",
                                "/resource/idm/img/19.png",
                                "/resource/idm/img/bj.png",
                                "/resource/idm/img/dywj.png",
                                "/resource/idm/img/rcap.png",
                                "/resource/idm/img/wdzx.png",
                                "/resource/idm/img/wjjh.png",
                                "/resource/idm/img/yqfk.png",
                                "/resource/idm/img/zbzs.png",
                                "/resource/idm/img/zxzys.png",
                                "/resource/idm/img/zyzx.png",
                                "/resource/idm/img/kjyy01.png",
                                "/resource/idm/img/kjyy02.png",
                                "/resource/idm/img/kjyy03.png"
                            ],
                            "ctrlAttrObject": {
                                "width": "",
                                "height": "",
                                "cropper": false
                            }
                        },
                        {
                            "type": "switch",
                            "layoutType": "inline",
                            "text": "显示角标",
                            "desc":"设置代办列表角标是否显示",
                            "bindKey": "showTodoNumber",
                            "default": false
                        }
                    ]
                }
            ]
        },
        {
            "type": "group",
            "text": "外层样式设置",
            "desc": "提供设置内容样式、数量等属性",
            "children":[
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "图标颜色",
                    "bindKey": "titleIconFontColor",
                    "default": "",
                    "display": "@[isShowTitle]"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "图标大小",
                    "bindKey": "titleIconFontSize",
                    "default": 14,
                    "display": "@[isShowTitle]"
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box"
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "auto"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "背景设置",
                    "desc": "点击？查看背景设置用法指南",
                    "helpUrl": "",
