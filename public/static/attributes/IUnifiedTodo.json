{
    "classId": "idm.componet.mobilewechat.unifiedTodo",
    "comName": "统一待办",
    "className": "IUnifiedTodo",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "组件标题",
                    "bindKey": "htmlTitle",
                    "default": "紧急待办"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "desc": "设置组件点击链接跳转方式",
                    "dictionary": [
                        {
                            "label": "当前页跳转",
                            "value": "_self"
                        },
                        {
                            "label": "新窗口打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_self"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示更多",
                    "bindKey": "showMore",
                    "default": true
                },
                {
                    "type": "slider",
                    "layoutType": "block",
                    "text": "显示数量",
                    "bindKey": "limit",
                    "default": "3"
                },
                {
                    "type": "iconSelect",
                    "layoutType": "inline",
                    "text": "标题图标",
                    "bindKey": "titleIconClass",
                    "default": ""
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "图标颜色",
                    "bindKey": "titleIconFontColor",
                    "default": ""
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "图标大小",
                    "bindKey": "titleIconFontSize",
                    "default": 18
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "标题字体设置",
                    "bindKey": "titleFontStyle",
                    "default": {
                        "fontColors": {
                            "hex": "#333333"
                        },
                        "fontSize": 16,
                        "fontSizeUnit": "px",
                        "fontWeight": "800"
                    }
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "auto"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "10px",
                        "paddingRightVal": "10px",
                        "paddingBottomVal": "10px",
                        "paddingLeftVal": "10px"
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "treeSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "bindKey": "dataSource",
                    "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "数据接口",
                    "bindKey": "customInterfaceUrl",
                    "default": "/ctrl/dataSource/getDatas",
                    "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}"
                },
                {
                    "type": "textarea",
                    "layoutType": "inline",
                    "text": "显示字段",
                    "bindKey": "dataFiled",
                    "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
                    "default": "value",
                    "placeholder": "示例：data.filedName 或者 [0].data[0].filedName"
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "点击单项动作",
                    "bindKey": "clickToDoItemFunction",
                    "desc": "此设置用于点击时候执行自定义函数逻辑，如果设置了此函数则内置的根据数据跳转链接则失效",
                    "multiple": true
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "更多链接",
                    "bindKey": "moreListLink",
                    "desc": "此设置用于点击更多时候跳转链接，如果设置了链接地址则内置的根据数据跳转链接则失效",
                    "display": "@[showMore == true]"
                }
            ]
        }
    ]
}