{
    "classId": "idm.componet.console.applicationshortcut",
    "comName": "应用中心快捷方式",
    "className": "IApplicationShortcut",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "左右滑动",
                    "desc":"设置是否使用左右可滑动模式，如果开启了左右滑动模式则只会在一行内显示图标",
                    "bindKey": "isSlide",
                    "default": false
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示角标",
                    "desc":"设置是否显示角标提示，如果配置了角标服务接口且有数量的时候会显示红色背景的数量角标",
                    "bindKey": "showTodoNumber",
                    "default": false
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "展示列数",
                    "bindKey": "showColumn",
                    "default": 5,
                    "display": "@[!isSlide]"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "最多行数",
                    "bindKey": "showRows",
                    "default": 2,
                    "display": "@[!isSlide]"
                },
                {
                    "type": "table",
                    "text": "应用配置",
                    "bindKey": "applicationList",
                    "tabText": "应用[index]",
                    "openGroup": true,
                    "children": [
                        {
                            "type": "treeSelect",
                            "layoutType": "inline",
                            "text": "选择应用",
                            "bindKey": "selectApplication",
                            "dataSourceUrl": "/ctrl/tencentApp/getAllApps",
                            "default": "",
                            "openGroup": true
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "应用名称",
                            "bindKey": "applicationName",
                            "default": ""
                        },
                        {
                            "type": "uploadImage",
                            "layoutType": "inline",
                            "text": "应用图标",
                            "bindKey": "applicationIconUrl",
                            "default": "",
                            "dictionary": [
                                "/resource/idm/img/6.png",
                                "/resource/idm/img/12.png",
                                "/resource/idm/img/14.png",
                                "/resource/idm/img/19.png",
                                "/resource/idm/img/bj.png",
                                "/resource/idm/img/dywj.png",
                                "/resource/idm/img/rcap.png",
                                "/resource/idm/img/wdzx.png",
                                "/resource/idm/img/wjjh.png",
                                "/resource/idm/img/yqfk.png",
                                "/resource/idm/img/zbzs.png",
                                "/resource/idm/img/zxzys.png",
                                "/resource/idm/img/zyzx.png"
                            ],
                            "ctrlAttrObject": {
                                "width": "40px",
                                "height": "40px",
                                "maxSize": 2097152
                            }
                        },
                        {
                            "type": "switch",
                            "layoutType": "inline",
                            "text": "权限过滤",
                            "desc":"设置应用是否开启权限过滤功能，如果开启，则会根据用户是否有权限来展示应用",
                            "bindKey": "applicationOpenValid",
                            "default": false
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "应用链接",
                            "bindKey": "applicationUrl",
                            "default": ""
                        },
                        {
                            "type": "select",
                            "layoutType": "inline",
                            "text": "跳转方式",
                            "bindKey": "applicationJumpType",
                            "desc": "设置组件显示风格",
                            "dictionary": [
                                {
                                    "label": "当前页跳转",
                                    "value": "_self"
                                },
                                {
                                    "label": "新窗口打开",
                                    "value": "_blank"
                                }
                            ],
                            "default": "_self"
                        },
                        {
                            "type": "switch",
                            "layoutType": "inline",
                            "text": "显示角标",
                            "desc":"设置应用待办角标是否显示",
                            "bindKey": "showTodoNumber",
                            "default": false
                        }
                    ]
                }
            ]
        },
        {
            "type": "group",
            "text": "内层容器样式",
            "desc": "点击？查看内层容器样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box"
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "auto"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "文字",
                    "bindKey": "font"
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "desc":"用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default":"",
                    "placeholder":"例如：blue"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc":"主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]",
                    "default": {
                        "hex": "#1890FF",
                        "hex8": "#1890FFFF"
                    }
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "次要颜色",
                    "bindKey": "minorColor",
                    "desc":"主题的次要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]",
                    "default": {
                        "hex": "#e6f7ff",
                        "hex8": "#e6f7ffFF"
                    }
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看数据源用法指南",
            "children": [
                {
                    "type": "group",
                    "text": "角标接口设置",
                    "desc": "应用显示角标选项打开的时候，用于获取应用右上角角标数据的接口设置",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "数据接口",
                            "desc": "应用显示角标选项打开的时候，用于获取应用右上角角标数据的接口地址",
                            "bindKey": "getApplicationMarkNumberUrl",
                            "default": "/ctrl/dataSource/getDatas"
                        },
                        {
                            "type": "textarea",
                            "layoutType": "inline",
                            "text": "角标字段",
                            "bindKey": "dataFiled",
                            "desc": "应用显示角标选项打开的时候，根据应用右上角角标接口返回数据格式指定结果集的字段，若它的值为{data:{count:5}}，则这里应该填写count",
                            "default": "count",
                            "placeholder": "示例:count"
                        }
                    ]
                },
                {
                    "type": "textarea",
                    "layoutType": "block",
                    "text": "刷新KEY",
                    "bindKey": "messageRefreshKey",
                    "desc": "根据组件接受到的消息KEY来刷新数据，可配置多个，以英文逗号分开",
                    "default": "",
                    "placeholder": "示例：inbox,info,toread"
                }
            ]
        }
    ]
}