{
    "classId": "idm.componet.mobilewechat.banner",
    "comName": "广告轮播",
    "className": "IBanner",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "标题",
                    "bindKey": "htmlTitle",
                    "default": "广告轮播",
                    "display": "@[false]"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示方块",
                    "bindKey": "showBullet",
                    "desc": "配置轮播分页器方块显示",
                    "default": true
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "desc": "设置点击轮播图片时链接跳转方式",
                    "dictionary": [
                        {
                            "label": "当前页跳转",
                            "value": "_self"
                        },
                        {
                            "label": "新窗口打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_self"
                },
                {
                    "type": "slider",
                    "layoutType": "block",
                    "text": "显示数量",
                    "desc": "设置显示轮播图片数量，自定义配置轮播时失效",
                    "bindKey": "limit",
                    "default": 5,
                    "display": "@[dataType === 'dataSource']"
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "轮播高度",
                    "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                    "bindKey": "height",
                    "width": "60px",
                    "default": {
                        "inputVal": 240,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "vh",
                            "value": "vh"
                        },
                        {
                            "label": "vw",
                            "value": "vw"
                        }
                    ]
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "图片圆角",
                    "bindKey": "imgBorderRadius",
                    "default": {
                        "inputVal": 8,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        }
                    ]
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "上外边距",
                    "bindKey": "marginTop",
                    "default": {
                        "inputVal": 0,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        }
                    ]
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "下外边距",
                    "bindKey": "marginBottom",
                    "default": {
                        "inputVal": 0,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        },
                        {
                            "label": "em",
                            "value": "em"
                        }
                    ]
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "标题字体",
                    "bindKey": "titleFontStyle",
                    "desc":"设置轮播图片下方字体",
                    "default": {
                        "fontColors": {
                            "hex": "#ffffff"
                        },
                        "fontSize": 14,
                        "fontSizeUnit": "px"
                    }
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc":"用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default":"",
                    "placeholder":"例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },{
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc":"主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]",
                    "default": {
                        "hex": "#1890FF",
                        "hex8": "#1890FFFF"
                    }
                },{
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "次要颜色",
                    "bindKey": "minorColor",
                    "desc":"主题的次要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]",
                    "default": {
                        "hex": "#e6f7ff",
                        "hex8": "#e6f7ffFF"
                    }
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "group",
                    "text": "适配设置",
                    "desc":"通过设置属性来适配移动端页面尺寸",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "基准值",
                            "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
                            "bindKey": "baseSize",
                            "default": 414
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "适配比例",
                            "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
                            "bindKey": "adaptationRatio",
                            "default": 1.2
                        }
                    ]
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "数据模式",
                    "bindKey": "dataType",
                    "desc": "设置点击轮播图片数据模式",
                    "dictionary": [
                        {
                            "label": "数据源",
                            "value": "dataSource"
                        },
                        {
                            "label": "自定义",
                            "value": "custom"
                        }
                    ],
                    "default": "dataSource"
                },
                {
                    "type": "table",
                    "layoutType": "inline",
                    "text": "轮播配置",
                    "bindKey": "bannerTable",
                    "tabText": "轮播[index]",
                    "openGroup": true,
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "轮播标题",
                            "bindKey": "title",
                            "default": "标题"
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "跳转链接",
                            "bindKey": "jumpUrl",
                            "default": ""
                        },
                        {
                            "type": "uploadImage",
                            "layoutType": "block",
                            "text": "轮播图片",
                            "bindKey": "image",
                            "default": "https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fp7.itc.cn%2Fimages01%2F20200903%2F9f80293e09644046a408f8be7359d4ff.jpeg&refer=http%3A%2F%2Fp7.itc.cn&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=auto?sec=1654761049&t=b2726a52f403b5d4dcca968820d55109"
                        }
                    ],
                    "display": "@[dataType === 'custom']"
                },
                {
                    "type": "treeSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "bindKey": "dataSource",
                    "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup",
                    "display": "@[dataType === 'dataSource']"
                },
                {
                    "type": "textarea",
                    "layoutType": "inline",
                    "text": "显示字段",
                    "bindKey": "dataFiled",
                    "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
                    "default": "image",
                    "placeholder": "示例：data.filedName 或者 [0].data[0].filedName",
                    "display": "@[dataType === 'dataSource']"
                }
            ]
        }
    ]
}