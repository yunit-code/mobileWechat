{
    "classId": "idm.componet.mobilewechat.banner",
    "comName": "广告轮播",
    "className": "IBanner",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "标题",
                    "bindKey": "htmlTitle",
                    "default": "广告轮播"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "显示数量",
                    "bindKey": "limit",
                    "default": 5
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "desc": "设置组件显示风格",
                    "dictionary": [
                        {
                            "label": "当前页跳转",
                            "value": "_self"
                        },
                        {
                            "label": "新窗口打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_self"
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "轮播高度",
                    "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                    "bindKey": "height",
                    "width": "60px",
                    "default": "240px"
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "图片圆角",
                    "bindKey": "imgBorderRadius",
                    "default": {
                        "inputVal": 8,
                        "selectVal": "px"
                    }
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "上外边距",
                    "bindKey": "marginTop",
                    "default": {
                        "inputVal": 0,
                        "selectVal": "px"
                    }
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "下外边距",
                    "bindKey": "marginBottom",
                    "default": {
                        "inputVal": 0,
                        "selectVal": "px"
                    }
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "数据接口",
                    "bindKey": "bannerInterfaceUrl",
                    "desc": "通过接口获取轮播内容",
                    "default": "/ctrl/"
                },
                {
                    "type": "textarea",
                    "layoutType": "inline",
                    "text": "显示字段",
                    "bindKey": "dataFiled",
                    "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
                    "default": "",
                    "placeholder": "示例：data.filedName 或者 [0].data[0].filedName"
                }
            ]
        }
    ]
}