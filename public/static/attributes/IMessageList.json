{
    "classId": "idm.componet.mobilewechat.messageList",
    "comName": "统一待办",
    "className": "IMessageList",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "组件标题",
                    "bindKey": "htmlTitle",
                    "default": "信息列表",
                    "display": "@[false]"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "desc": "设置组件点击链接跳转方式",
                    "dictionary": [
                        {
                            "label": "当前页跳转",
                            "value": "_self"
                        },
                        {
                            "label": "新窗口打开",
                            "value": "_blank"
                        }
                    ],
                    "default": "_self"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "组件样式",
                    "bindKey": "compStyle",
                    "desc": "设置组件显示风格",
                    "display": "@[false]",
                    "dictionary": [
                        {
                            "label": "样式一",
                            "value": "styleOne"
                        },
                        {
                            "label": "样式二",
                            "value": "styleTwo"
                        },
                        {
                            "label": "样式三",
                            "value": "styleThree"
                        },
                        {
                            "label": "样式四",
                            "value": "styleFour"
                        }
                    ],
                    "default": "styleFour"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示页签",
                    "desc": "是否显示显示页签，不显示则默认取第一个",
                    "bindKey": "showTab",
                    "default": true
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示更多",
                    "bindKey": "showMore",
                    "default": true,
                    "display": "@[showTab == true]"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示角标",
                    "bindKey": "showTotalNumber",
                    "default": false,
                    "display": "@[compStyle !== 'styleFour']"
                },
                {
                    "type": "iconSelect",
                    "layoutType": "inline",
                    "text": "标题图标",
                    "bindKey": "titleIconClass",
                    "default": "",
                    "display": "@[compStyle != 'styleFour']"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "图标颜色",
                    "bindKey": "titleIconFontColor",
                    "default": "",
                    "display": "@[compStyle != 'styleFour']"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "图标大小",
                    "bindKey": "titleIconFontSize",
                    "default": 18,
                    "display": "@[compStyle != 'styleFour']"
                },
                {
                    "type": "slider",
                    "layoutType": "inline",
                    "text": "显示数量",
                    "bindKey": "limit",
                    "default": "3"
                }
            ]
        },
        {
            "type": "group",
            "text": "标题容器样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "font",
                    "layoutType": "inline",
                    "text": "页签字体",
                    "bindKey": "titleFontStyle",
                    "desc": "设置页签字体样式",
                    "default": {
                        "fontColors": {
                            "hex": "#333333"
                        },
                        "fontSize": 16,
                        "fontSizeUnit": "px"
                    },
                    "display": "@[showTab == true]"
                },
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "选中页签字体",
                    "bindKey": "titleFontStyleActive",
                    "display": "@[compStyle === 'styleFour' && showTab == true]",
                    "desc": "设置主题时，字体颜色为主题颜色",
                    "default": {
                        "fontColors": {
                            "hex": "#000"
                        },
                        "fontSize": 16,
                        "fontWeight": "500",
                        "fontSizeUnit": "px"
                    }
                },
                {
                    "type": "table",
                    "layoutType": "inline",
                    "text": "页签配置",
                    "desc": "配置信息页签信息，如不显示页签，则取第一个页签数据展示信息列表",
                    "bindKey": "messageTitleList",
                    "tabText": "页签[index]",
                    "openGroup": true,
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "显示名称",
                            "bindKey": "tabTitle",
                            "default":"页签名称",
                            "placeholder":"请输入名称"
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "页签标识",
                            "bindKey": "tabKey",
                            "desc": "设置当前页签标识，用来获取对应页签数据，例如：今日信息 - todayInfos，工作动态 - workDynamics",
                            "default": ""
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "更多链接",
                            "bindKey": "moreListLink",
                            "desc": "此设置用于点击更多时候跳转链接，如果设置了链接地址则内置的根据数据跳转链接则失效",
                            "display": "@[showMore == true && showTab == true]"
                        },
                        {
                            "type": "switch",
                            "layoutType": "inline",
                            "text": "默认选中",
                            "bindKey": "isActive",
                            "desc": "设置此页签是否默认选中，如设置了多个则默认选中第一个",
                            "default": false,
                            "display": "@[showTab == true]"
                        }
                    ]
                }
            ]
        },
        {
            "type": "group",
            "text": "外层容器样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "auto"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "10px",
                        "paddingRightVal": "10px",
                        "paddingBottomVal": "10px",
                        "paddingLeftVal": "10px"
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                }
            ]
        },
        {
            "type": "group",
            "text": "内层容器样式",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "font",
                    "layoutType": "block",
                    "text": "信息字体",
                    "bindKey": "messageItemFontStyle"
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "subBgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "subWidth",
                            "width": "60px",
                            "default": "auto"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "subHeight",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "subBox",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "0",
                        "paddingRightVal": "0",
                        "paddingBottomVal": "0",
                        "paddingLeftVal": "0"
                    }
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "subBorder"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "空白文字",
                    "desc": "列表为空时，提示文字设置",
                    "bindKey": "emptyText",
                    "default": "数据为空"
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "空白高度",
                    "desc": "列表为空时，显示空白数据高度，设置过小则显示不全，推荐90px",
                    "bindKey": "emptyBoxHeight",
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        },
                        {
                            "label": "em",
                            "value": "em"
                        }
                    ],
                    "default": {
                        "inputVal": 90,
                        "selectVal": "px"
                    }
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "desc":"用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default":"",
                    "placeholder":"例如：blue"
                },{
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc":"主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]",
                    "default": {
                        "hex": "#1890FF",
                        "hex8": "#1890FFFF"
                    }
                },{
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "次要颜色",
                    "bindKey": "minorColor",
                    "desc":"主题的次要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]",
                    "default": {
                        "hex": "#e6f7ff",
                        "hex8": "#e6f7ffFF"
                    }
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "treeSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "bindKey": "dataSource",
                    "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup"
                },
                {
                    "type": "textarea",
                    "layoutType": "inline",
                    "text": "显示字段",
                    "bindKey": "dataFiled",
                    "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{data:{filedName:[{\"text\":\"\",\"value\":\"\",\"check\":true}]}}，则这里应该填写data.filedName",
                    "default": "title",
                    "placeholder": "示例：data.filedName 或者 [0].data[0].filedName"
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "点击单项动作",
                    "bindKey": "clickMessageItemFunction",
                    "desc": "此设置用于点击时候执行自定义函数逻辑，如果设置了此函数则内置的根据数据跳转链接则失效",
                    "multiple": true
                }
            ]
        }
    ]
}