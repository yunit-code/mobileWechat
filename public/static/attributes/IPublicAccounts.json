{
    "classId": "idm.componet.mobileWechat.publicaccounts",
    "comName": "公共账号",
    "className": "IPublicAccounts",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "uploadImage",
                    "layoutType": "inline",
                    "text": "图标",
                    "bindKey": "accountUrl",
                    "placeholder": "可输入图片地址或直接上传"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "固定位置",
                    "bindKey": "fixed",
                    "desc":"设置是否固定位置",
                    "default": false
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "放置坐标",
                    "bindKey": "coordinates",
                    "desc":"放置坐标",
                    "dictionary": [
                        {
                            "label": "左上角",
                            "value": "leftTop"
                        },
                        {
                            "label": "右上角",
                            "value": "rightTop"
                        },
                        {
                            "label": "右下角",
                            "value": "rightBottom"
                        },
                        {
                            "label": "左下角",
                            "value": "leftBottom"
                        }
                    ],
                    "default": "leftTop"
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "偏移(X)",
                    "desc":"偏移(X)",
                    "bindKey": "offsetX",
                    "default": 20
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "偏移(Y)",
                    "desc":"偏移(Y)",
                    "bindKey": "offsetY",
                    "default": 20
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "input",
                    "layoutType": "block",
                    "text": "虚拟账号接口地址",
                    "bindKey": "customInterfaceUrl",
                    "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
                    "default": "/ctrl/virtualAccount/getVirtualAccountList"
                },
                {
                    "type": "input",
                    "layoutType": "block",
                    "text": "切换账号接口地址",
                    "bindKey": "changeInterfaceUrl",
                    "desc": "用于获取数据源的接口地址，请按照统一标准的返回格式返回文本数据，格式如下：{\"code\":\"200\",\"data\":\"\",...}",
                    "default": "/ctrl/virtualAccount/switchAccount"
                }
            ]
        }
    ]
}